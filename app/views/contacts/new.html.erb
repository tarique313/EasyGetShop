<div class="row">
<div class="col-md-6 col-md-offset-3">

  <h3><%= t ".send_message" %></h3>

  <%= simple_form_for @contact do |f| %>
    <%= f.input :name, label: (t ".your_name"), required: true %>
    <%= f.input :email, label: (t ".email"), required: true %>
    <%= f.input :message, label: (t ".your_message"), :as => :text, required: true %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => (t ".hint") %>
    </div>
    <div>
      </br>
       <div>
    <%#= recaptcha_tags %> <!-- THIS -->
  </div>
  <br>
      <%= f.button :submit, ( t ".send_message"), :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>
</div>
