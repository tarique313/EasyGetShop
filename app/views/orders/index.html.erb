<p id="notice"><%= notice %></p>

<h1>Orders</h1>
<h3>Order list of <%= current_user.name%></h3>
<table>
  <thead>
    <tr>
      <th>Body</th>
 <!--      <th>Status</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @orders.present? %>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.body %></td>
        <!-- <td><%#= order.status %></td> -->
           <% if order.user_id == current_user.id %>

        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
    <% else %>
    <span>Sorry, You have no order. <%= link_to "create", new_order_path%> your first order. </span>
    <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
