<p id="notice"><%= notice %></p>


<h1>Order list of <strong><%= current_user.name%></strong></h1>
<hr>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Order</th>
      <th>Order Status</th>
      <th>Order Date</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @orders.present? %>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.body %></td>
        <% if order.status == true %>
        <td><span class="label label-success">Product Delivered</span></td>
        <% else %>
        <td><span class="label label-warning">Shipping is in Progress</span></td>
        <% end %>
        <td><%= order.created_at%></td>
        <td><span class="badge"><%= order.comments.count%></span></td>
           <% if order.user_id == current_user.id %>

        <td><%= link_to 'Show', order, class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
        <%end%>
      </tr>
    <% end %>
    <% else %>
    <span>Sorry, You have no order. <%= link_to "create", new_order_path%> your first order. </span>
    <%end%>
  </tbody>
</table>

<br>

<center><%= link_to 'New Order', new_order_path, class: "btn btn-primary btn-lg" %></center>
